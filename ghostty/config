# Terminal theme
theme = "Monokai Pro"
# Tab navigation
keybind = cmd+h=previous_tab
keybind = cmd+l=next_tab

# panel Split
keybind = cmd+shift+f=new_split:right


# Split panel navigation
keybind = cmd+alt+h=goto_split:left
keybind = cmd+alt+left=goto_split:left

keybind = cmd+alt+l=goto_split:right
keybind = cmd+alt+right=goto_split:right

keybind = cmd+alt+j=goto_split:up
keybind = cmd+alt+up=goto_split:up

keybind = cmd+alt+k=goto_split:down
keybind = cmd+alt+down=goto_split:down
