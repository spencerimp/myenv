# Terminal theme
theme = "Monokai Pro"
# Tab navigation
keybind = super+h=previous_tab
keybind = super+l=next_tab

# panel Split
keybind = super+shift+f=new_split:right


# Split panel navigation
keybind = super+alt+h=goto_split:left
keybind = super+alt+left=goto_split:left

keybind = super+alt+l=goto_split:right
keybind = super+alt+right=goto_split:right

keybind = super+alt+j=goto_split:up
keybind = super+alt+up=goto_split:up

keybind = super+alt+k=goto_split:down
keybind = super+alt+down=goto_split:down
